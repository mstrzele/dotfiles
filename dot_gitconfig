[alias]
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
	lg = log --color --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset'
[core]
	editor = vim
	ignorecase = false
[credential "https://github.com"]
	helper = !gh auth git-credential
[diff]
	tool = vscode
[difftool]
	prompt = false
[difftool "vscode"]
	cmd = code --wait --diff --new-window $LOCAL $REMOTE
[init]
	defaultBranch = master
[merge]
	conflictstyle = diff3
	tool = vscode
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait --new-window $MERGED
[pull]
	rebase = true
[push]
	default = simple
[user]
	name = Maciej Strzelecki
	email = maciej.strzelecki@gmail.com
